<?xml version="1.0" encoding="utf-8"?>
<checkstyle>
	<% report.forEach(function (file) { %>
		<file name="<%= file.name %>">
			<% file.issues.forEach(function (issue) { %>
				<error
					line="<%= issue.line %>"
					column="<%= issue.character ? issue.character : '' %>"
					severity="warning"
					message="<%= issue.reason ? issue.reason : 'Unused variable `' + issue.name + '`' %>"
					source="com.jslint.foo" />
			<% }); %>
		</file>
	<% }); %>
</checkstyle>
